                        <dd>
                            @Html.DisplayFor(model => model.HostelId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.HostelName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HostelName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.HostelAddress)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HostelAddress)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.HostelCity)
