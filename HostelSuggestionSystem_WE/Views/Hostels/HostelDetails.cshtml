                        <dd>
                            @Html.DisplayFor(model => model.HostelCity)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.HostelDistance)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HostelDistance)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.HostelRating)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HostelRating)
                        </dd>

                    </dl>
                </td>
                <td colspan="1"></td>
                <td colspan="2">
                    <img src="@Url.Content("~/Images/" + Model.HostelImageUrl)" height="200px" width="300px" />
                </td>
            </tr>
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "UpdateHostel", new {  Id = Model.HostelId }) |
